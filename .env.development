# Development Environment Configuration

# Application
NODE_ENV=development
PORT=3000

# Database Configuration
DATABASE_TYPE=mysql
DATABASE_HOST=localhost
DATABASE_PORT=3306
DATABASE_USERNAME=root
DATABASE_PASSWORD=12345678@Abc
DATABASE_NAME=screen_recorder
DATABASE_SYNC=false
DATABASE_LOGGING=false

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production-dev-env
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production-dev-env
JWT_REFRESH_EXPIRES_IN=7d

# OAuth - Google
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3000/auth/google/callback

# OAuth - Facebook
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret
FACEBOOK_CALLBACK_URL=http://localhost:3000/auth/facebook/callback

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379

# Debug Settings
LOG_LEVEL=debug

# WebSocket Gateway
WS_PORT=8000
